<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:id="@+id/paymentMethodCardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="5dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/paymentMethodImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/fifth"
            android:layout_alignParentLeft="true"/>



            <TextView
                android:id="@+id/paymentMethodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jazz Cash"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/paymentMethodImg"
                android:layout_marginLeft="17dp"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/paymentMethodForward"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:minWidth="40dp"
                android:minHeight="40dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>