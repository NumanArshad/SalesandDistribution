<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@color/colorPrimary"
    android:id="@+id/addProduct_parentlayout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/addProductImg"
            android:src="@mipmap/nationaltomatoketchup"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addProductName"
            android:layout_toRightOf="@id/addProductImg"
            android:layout_alignBaseline="@id/addProductImg"

            android:layout_marginTop="7dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="Tomato kecthup"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addProductPrice"
            android:layout_toRightOf="@id/addProductName"
            android:layout_alignBaseline="@id/addProductName"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="10dp"
            android:textSize="17dp"
            android:textColor="@color/black"

            android:text="768"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/addProduct_inCartIcon"
            android:src="@drawable/ic_shopping_cart_black_24dp"
            android:layout_alignParentRight="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addProducttype"
            android:layout_below="@id/addProductName"
            android:layout_toRightOf="@id/addProductImg"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="category"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addProductbrand"
            android:layout_alignBaseline="@id/addProducttype"
            android:layout_toRightOf="@id/addProducttype"
            android:layout_marginLeft="17dp"

            android:textSize="17dp"
            android:textColor="@color/black"
            android:text="brand"/>


